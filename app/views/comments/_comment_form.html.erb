<div class="comment-form clearfix">
  <%= form_for @post.comments.new, url: post_comments_path(@post.id) do |f| %>
    <div class="form-group">
      <%= f.text_field :content, class: 'form-control' %>
      <%= f.submit type: 'submit', value: '评论', class: 'btn btn-default btn-comment' %>
    </div>
  <% end %>
</div>