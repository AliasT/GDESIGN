<!--统计表-->
<div class="col-md-2">
  <%= render partial: 'statics', locals: { user: @user } %>
</div>

<div class="col-md-6">
  <!--新建表单-->
  <%= render 'new_form' %>
  <!--展示列表-->
  <!--如果是当前用户发布显示删除按钮-->
  <% posts = @p %>
  <ul class="list-group">
    <%= render partial: 'post', layout: 'post_list', collection: posts %>
    <% if posts.size == 10 %>
      <%= link_to '加载更多', '#more-posts-hash', { class: 'more-posts', id: 'more-posts-hash', data: { offset: 1 } } %>
    <% end %>
  </ul>
</div>
